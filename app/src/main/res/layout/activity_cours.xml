<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/back1"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".CoursActivity">
    <ImageView
        android:src="@drawable/logo"
        android:layout_width="wrap_content"
        android:layout_height="150dp"/>
    <LinearLayout

        android:layout_marginTop="30dp"
        android:background="#F2F7A1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:onClick="Cours1"
            android:layout_width="363dp"
            android:layout_height="60dp"
            android:text="Lap Trinh Android co ban"
            android:textSize="30dp"
            android:textStyle="bold" />

        <ImageView
            android:onClick="AddCours1"
            android:id="@+id/img1"
            android:layout_width="50dp"
            android:layout_height="47dp"
            android:src="@drawable/ic_add" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="#F2F7A1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:textSize="30dp"
            android:text="Java1"
            android:layout_width="360dp"
            android:layout_height="60dp"/>
        <ImageView
            android:id="@+id/img2"
            android:src="@drawable/ic_add"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="#F2F7A1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:textSize="30dp"
            android:text="Lap Trinh C/C++"
            android:layout_width="360dp"
            android:layout_height="60dp"/>
        <ImageView
            android:id="@+id/img3"
            android:src="@drawable/ic_add"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="#F2F7A1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:textSize="30dp"
            android:text="Lap Trinh PHP"
            android:layout_width="360dp"
            android:layout_height="60dp"/>
        <ImageView
            android:id="@+id/img4"
            android:src="@drawable/ic_add"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
    </LinearLayout>
    <Button
        android:onClick="ShowYourCours"
        android:layout_marginTop="10dp"
        android:text="Your Cours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>